{
  "name": "component-inspector",
  "title": "Component inspector",
  "description": "Component DOM inspector",
  "version": "1.5.0",
  "repository": "lahmatiy/component-inspector",
  "keywords": [
    "frontend",
    "component",
    "dom",
    "inspector",
    "spa",
    "devtools",
    "tools",
    "backbone",
    "react"
  ],
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "babel-core": "^6.3.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-source-wrapper": "^2.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-function-bind": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.3.13",
    "basisjs": "~1.11.1",
    "basisjs-tools": "~1.12.3",
    "chai": "3.5.0",
    "classnames": "2.2.5",
    "eslint": "^2.13.1",
    "karma": "~1.3.0",
    "jscs": "~2.10.0",
    "karma-chrome-launcher": "1.0.1",
    "karma-firefox-launcher": "1.0.0",
    "karma-mocha": "1.3.0",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "2.0.5",
    "mocha": "2.5.3",
    "react-redux": "5.0.6",
    "redux": "3.7.2",
    "prop-types": "15.6.0",
    "rempl": "1.0.0-alpha.18",
    "webpack": "3.8.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "basis": true,
      "asset": true,
      "resource": true
    },
    "rules": {
      "no-duplicate-case": 2,
      "no-undef": 2,
      "no-unused-vars": [
        2,
        {
          "vars": "all",
          "args": "after-used"
        }
      ]
    }
  },
  "scripts": {
    "build": "npm run build:subscriber && basis build --pack",
    "build:subscriber": "basis build src/inspector-rempl/subscriber/index.html --js-bundle --js-bundle-name subscriber --pack --warnings",
    "prepublish": "npm run build",
    "codestyle": "jscs src tests && eslint src",
    "test": "karma start",
    "init-test-deps": "cd tests && cd react14 && npm i && cd ../react15 && npm i",
    "travis": "npm run codestyle && npm run init-test-deps && npm test"
  },
  "files": [
    "dist",
    "HISTORY.md",
    "LICENSE",
    "README.md"
  ]
}
